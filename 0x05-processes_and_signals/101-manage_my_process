#!/bin/bash
# /etc/init.d/101-manage_my_process

PID_FILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "$PROCESS_NAME is already running."
    else
        echo "Starting $PROCESS_NAME..."
        nohup /path/to/manage_my_process &> /dev/null &
        echo $! > "$PID_FILE"
        echo "$PROCESS_NAME started"
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        echo "Stopping $PROCESS_NAME..."
        kill "$PID"
        rm "$PID_FILE"
        echo "$PROCESS_NAME stopped"
    else
        echo "$PROCESS_NAME is not running."
    fi
}

restart() {
    echo "Restarting $PROCESS_NAME..."
    stop
    start
    echo "$PROCESS_NAME restarted"
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: 101-manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
